<div class="home-header">
    {{#if search}}
    <h1>Você buscou por : <span>{{search}}</span></h1>
        {{#if toughtsqti}}
            <p>Foram encontrados <span>{{toughtsqti}}</span> pensamentos relacionados a sua pesquisa</p>
        {{else}}
            <p>Nenhum pensamento encontrado para a pesquisa <span>{{search}}</span></p>
        {{/if}}
    {{else}}
    <h1>Conheça alguns dos nosos <span>Pensamentos :</span></h1>
    {{/if}}
    <form action="" method="get">
        <input type="text" name="search" placeholder="Busque um pensamento">
        <input type="submit" class="btn" value="buscar">
    </form>
    <div class="order-container">
        <span>Ordenar por:</span>
        <form action="" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit"><i class="bi bi-arrow-up"></i></button>
        </form>
        <form action="" method="get">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit"><i class="bi bi-arrow-down"></i></button>
        </form>
        <a href="/">Limpar</a>
    </div>
</div>

<div class="toughts-container">
    {{#each ToughtsAll}}
    <figure>
        <blockquote>
            "{{this.title}}"
        </blockquote>
        <figcaption>Por <span>{{this.User.name}}</span></figcaption>
    </figure>
    {{/each}}
</div>